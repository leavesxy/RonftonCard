<?xml version="1.0" encoding="utf-8" ?>
<CardTemplete>
	<templete name="RFC" desc="融付通标准卡结构">
		<data>
			<item name="version" 		type="BYTE" 	length="1"	offset="0"		description="卡片版本号"/>
			<item name="universityCode" type="BCD" 		length="3"	offset="1"		description="学校代码"/>
			<item name="sno" 			type="STR" 		length="20"	offset="4"		description="学工号"/>
			<item name="cardno" 		type="UINT32" 	length="4"	offset="24"		description="卡号"/>
			<item name="expireDate" 	type="DATE_B"	length="3"	offset="28"		description="有效期"/>
			<item name="idType"			type="BYTE" 	length="1"	offset="31"		description="身份类型"/>
			<item name="cardStatus" 	type="BYTE" 	length="1"	offset="32"		description="卡状态"/>
			<item name="name"		 	type="BIN" 		length="30"	offset="33"		description="姓名"/>
			<item name="sex"		 	type="BYTE" 	length="1"	offset="63"		description="性别"/>
			<item name="nation" 		type="BIN" 		length="8"	offset="64"		description="民族"/>
			<item name="country" 		type="BIN" 		length="8"	offset="72"		description="国籍"/>
			<item name="deptNo" 		type="BIN" 		length="12"	offset="80"		description="部门代码"/>
			<item name="balance" 		type="INT32" 	length="4"	offset="92"		description="余额"/>
			<item name="seq" 			type="INT16" 	length="2"	offset="96"		description="写卡序号"/>
			<item name="lastSumByMeal" 	type="INT32" 	length="4"	offset="98"		description="最后餐次累计消费额"/>
			<item name="lastMealNo" 	type="BYTE" 	length="1"	offset="102"	description="最后餐次"/>
			<item name="lastDate" 		type="DATE_B" 	length="3"	offset="103"	description="最后消费日期"/>
			<item name="payPwd" 		type="BIN" 		length="6"	offset="106"	description="支付密码"/>
			<item name="sumLmtMeal" 	type="INT32" 	length="4"	offset="112"	description="餐次最高消费限额"/>
		</data>
		
		<storage>
			<addr base="0x0000" size="16" descriptor="0x0000"  block="1" />
			<addr base="0x0010" size="16" descriptor="0x0000"  block="2" />
			<addr base="0x0020" size="16" descriptor="0x0001"  block="0" />
			<addr base="0x0030" size="16" descriptor="0x0001"  block="1" />
			<addr base="0x0040" size="16" descriptor="0x0001"  block="2" />
			<addr base="0x0050" size="16" descriptor="0x0002"  block="0" />
			<addr base="0x0060" size="16" descriptor="0x0002"  block="1" />
			<addr base="0x0070" size="16" descriptor="0x0002"  block="2" />
		</storage>
	</templete>

	<templete name="errorTest" desc="错误测试">
		<storage>
			<addr base="0x0000" size="16" descriptor="0x0005"  block="0" />
			<addr base="0x000a" size="16" descriptor="0x0005"  block="1" />
			<addr base="0x0020" size="16" descriptor="0x0005"  block="2" />
		</storage>
		<data>
			<item name="version" type="BYTE" length="1" offset="0" description="版本号"/>
			<item name="universityCode" type="STR" length="6" offset="1" description="学校代码"/>
			<item name="cardno" type="INT32" length="4" offset="0" description="卡号"/>
			<item name="sno" type="STR" length="20" offset="16" description="学工号"/>
			<item name="balance" type="INT32" length="4" offset="30" description="余额"/>
		</data>
	</templete>
</CardTemplete>